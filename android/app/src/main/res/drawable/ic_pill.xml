<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="100dp"
    android:height="100dp"
    android:viewportWidth="100"
    android:viewportHeight="100">

    <!-- Group to rotate the pill by 45 degrees -->
    <group
        android:rotation="45"
        android:pivotX="50"
        android:pivotY="50">

        <!-- Capsule shape (entire pill) -->
        <path
            android:strokeColor="#000000"
            android:strokeWidth="1"
            android:fillColor="#2196F3"
        android:pathData="M30,20 A20,20 0 0,1 70,20 L70,50 L30,50 Z"/>

        <path
            android:strokeColor="#000000"
            android:strokeWidth="1"
            android:fillColor="#FFFFFF"
        android:pathData="M30,50 L70,50 L70,80 A20,20 0 0,1 30,80 Z"/>
    </group>

</vector>